package variaveis;

public class Carrinho {

	public static void main(String[] args) {
		String nome = "Liquidificador";
		String categoria  ="Eletrodoméstico";
		double valor = 100;
		int quantidade = 5;
		double imposto = 0.05;

		System.out.println("Nome: " + nome);
		System.out.println("Categoria: " + categoria);
		System.out.println("Valor(R$): " + valor);
		System.out.println("Quantidade: " + quantidade);
		System.out.println("Imposto(%$): " + imposto);
		System.out.println("Valor só do imposto(R$): " + (quantidade*valor*imposto));
		System.out.println("Total com imposto(R$): " + (valor + valor*imposto));
		System.out.println("Total com imposto para pagamento a vista(R$): " + ((valor + valor*imposto)- (0.1*( valor + valor * imposto))));
		
			
		
		
		
		
		

	}

}
